{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-repositories",
  "title": "GitHub Repositories",
  "description": "View your GitHub repositories sorted by usage - quickly access your most active repos",
  "icon": "ext-icon.png",
  "author": "estruyf",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "access": "public",
  "license": "MIT",
  "commands": [
    {
      "name": "github-repositories",
      "title": "My GitHub Repositories",
      "subtitle": "GitHub",
      "description": "View your GitHub repositories sorted by usage",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@octokit/core": "^7.0.6",
    "@octokit/rest": "^22.0.1",
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
